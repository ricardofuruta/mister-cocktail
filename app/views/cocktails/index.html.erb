<div class="wrapper-grey">
  <div class="container">
    <div class="row">
     <% @cocktails.each do |cocktail| %>
     <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag cocktail.photo.url(:bright_face) %>
        <div class="caption">
          <h3><%= cocktail.name %></h3>
          <p>
            <%= link_to 'Show', cocktail, class: "btn btn-info", role: "button" %>
            <%= link_to 'Edit', edit_cocktail_path(cocktail), class: "btn btn-warning", role: "button" %>
            <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", role: "button" %>
            <!--       <a href="#" class="btn btn-primary" role="button">Show</a> <a href="#" class="btn btn-default" role="button">Button</a> -->

          </p>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>
</div>






